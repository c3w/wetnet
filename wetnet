def query_organization():
 print "query_organization"
 cursor = db.cursor ()
 Q=str("SELECT organization_name FROM organizations")
 cursor.execute (Q)
 row = cursor.fetchone()
 while row is not None:
  print("%s" % (row[0]))
  row = cursor.fetchone()
 cursor.close ()

def query_supernet():
 print "query_supernet"
 usage(sys.argv)
 sys.argv.pop(0)
 organization=sys.argv[0]
 cursor = db.cursor ()
 Q=str("SELECT supernet, organization FROM supernets WHERE organization LIKE '%s'" % organization)
 cursor.execute (Q)
 row = cursor.fetchone()
 while row is not None:
  print("%s - %s" % (row[0], row[1]))
  row = cursor.fetchone()
 cursor.close ()

def query_set():
