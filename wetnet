def query():
 usage(sys.argv) 
 sys.argv.pop(0)
 print "you are querying " + sys.argv[0]
 options = {"organization" : query_organization,
            "supernet" : query_supernet,
            "set" : query_set,
            "route" : query_route,
            "subnet" : query_subnet,
            "identifier" : query_identifier,
            "host" : query_host
 }
 options[sys.argv[0]]()

def create():
 usage(sys.argv) 
 sys.argv.pop(0)
 print "you are creating"
 options = {"organization" : create_organization,
            "supernet" : create_supernet,
            "set" : create_set,
            "subnet" : create_subnet,
            "magic" : magic_subnet,
            "host" : create_host
 }
 options[sys.argv[0]]()

options = {"query" : query,
           "create" : create
}
options[cmd]()

